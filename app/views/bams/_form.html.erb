<%= form_with(model: bam, local: true) do |form| %>


<div class="row">
  <div class="col-md-2"></div>
  <div class="well form-horizontal col-md-8">

    <div class="row">
      <p class="col-md-1 text-left">
        <strong>Id: </strong>
      <p class="col-md-3 text-left">
        <%= @bam.id %>
      </p>
      <p class="user col-md-1 text-left">
        <strong>C칩digo: </strong>
      </p>
      <p class="col-md-3">
        <%= form.text_field :code, id: :bam_code, class: "pull-left", style: "width:120px" %>
      </p>
      <p class=" user col-md-1 text-left">
        <strong>Imei: </strong>
      </p>
      <p class="col-md-3">
        <%= form.text_field :imei, id: :bam_imei, class: "pull-left", style: "width:140px" %>
      </p>
    </div>

    <div class="row">
      <p class="col-md-1 text-left">
        <strong>Modelo: </strong>
      </p>
      <p class="col-md-3">
        <%= form.text_field :model, id: :bam_model, class: "pull-left", style: "width:160px" %>
      </p>
      <p class=" user col-md-1 text-left">
        <strong>Estado: </strong>
      </p>
      <p class="col-md-3">
        <%= form.select :state, [['Catalogo', 'catalog'], ['Nuevo', 'new'], ['Usado' , 'used' ]],
        {}, {id: :bam_state, style: "width:120px", class: "pull-left"}%>
      </p>
      <p class="user col-md-1 text-left">
        <strong>Pais:</strong>
      </p>
      <p class="col-md-3 text-left">
        <%= form.select :country, [['Chile', 'CHL']],
        {}, {id: :bam_country, style: "width:140px", class: "pull-left"}%>
      </p>
    </div>

    <div class="row">
      <p class="user col-md-1 text-left">
        <strong>Precio: </strong>
      </p>
      <p class="col-md-3">
        <%= form.number_field :price, id: :bam_price, class: "pull-left", style: "width:160px" %>
      </p>
      <p class=" user col-md-1 text-left">
        <strong>Disponible: </strong>
      </p>
      <p class="col-md-3">
        <%= form.select :available, [['True', true], ['False', false]],
        {}, {id: :bam_available, style: "width:120px", class: "pull-left"}%>
      </p>
      <p class="col-md-4 text-left">
      </p>
    </div>

    <div class="row">
      <p class="col-md-1 text-left">
        <strong>Renovaci칩n:</strong>
      </p>
      <p class="col-md-7">
        <%= form.datetime_select :renovation_at, {order: [:day, :month, :year],
          default: 24.months.from_now}, {id: :bam_renovation_at}  %>
      </p>
      <p class="col-md-4"></p>
    </div>


    <br>
    <div class="actions">
      <% if params[:action] == 'new'%>
        <%= form.submit 'Crear', onclick: "return confirm('Est치 seguro que desea Crear el Bam')",
        class: "btn btn-primary btn-md" %>
      <% else %>
        <%= form.submit 'Editar', onclick: "return confirm('Est치 seguro que desea Editar el Bam')",
        class: "btn btn-primary btn-md" %>
      <% end %>
    </div>
  </div>
  <div class="col-md-2"></div>
</div>

<% end %>
