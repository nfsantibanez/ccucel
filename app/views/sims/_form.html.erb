<style>
  .text_area {
    vertical-align: top;
  }
</style>

<%= form_with(model: sim, local: true) do |form| %>

<div class="row">
  <div class="col-md-2"></div>
  <div class="well form-horizontal col-md-8">

    <div class="row">
      <p class="col-md-1 text-left">
        <strong>Id: </strong>
      </p>
      <p class="col-md-3 text-left">
        <%= @sim.id %>
      </p>
      <p class="user col-md-1 text-left">
        <strong>n° Serie: </strong>
      </p>
      <p class="user col-md-3 text-left">
        <%= form.text_field :serial_number, id: :sim_serial_number, class: "pull-left",
        style: "width:100px" %>
      </p>
      <p class=" user col-md-1 text-left">
        <strong>n° Teléfono: </strong>
      </p>
      <p class=" user col-md-3 text-left">
        <%= form.text_field :phone_number, id: :sim_phone_number, class: "pull-left",
        style: "width:100px" %>
      </p>
    </div>

    <div class="row">
      <p class=" user col-md-1 text-left">
        <strong>Estado: </strong>
      </p>
      <p class=" user col-md-3">
        <%= form.select :state, [['Nuevo','new'], ['Usado','used']], {},
        {id: :sim_state, style: "width:100px", class: "pull-left"}%>
      </p>
      <p class="col-md-1 text-left">
        <strong>Disponible: </strong>
      </p>
      <p class=" user col-md-3">
        <%= form.select :available, [['True', true], ['False', false]],
        {}, {id: :sim_available, style: "width:100px", class: "pull-left"}%>
      </p>
      <p class=" user col-md-1 text-left">
        <strong>Pais:</strong>
      </p>
      <p class=" user col-md-3 ">
        <%= form.select :country, [['Chile', 'CHL']],
        {}, {id: :sim_country, style: "width:100px", class: "pull-left"}%>
      </p>
    </div>

    <br>
    <div class="actions">
      <% if params[:action] == 'new'%>
        <%= form.submit 'Crear', onclick: "return confirm('Está seguro que desea Crear la Sim')",
        class: "btn btn-primary btn-md" %>
      <% else %>
        <%= form.submit 'Editar', onclick: "return confirm('Está seguro que desea Editar la Sim')",
        class: "btn btn-primary btn-md" %>
      <% end %>
    </div>
  </div>
  <div class="col-md-2"></div>
</div>


<% end %>
