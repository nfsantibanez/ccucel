<!DOCTYPE html>
<html lang="en">
<head>
  <title>Identifiación de Usuario y Solicitud</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <style>
    label {
      padding-top: 5px;
    }
    h2 {
      margin: 0;
    }
    hr {
      margin-top: 10px;
      margin-bottom: 10px;
    }
    .alert {
      margin-top: 5px;
      display:inline-block;
      vertical-align: middle;
      height: 50%;
      padding: 1px;
      margin-top: 1%;
      margin-bottom: 1%;
    }
  </style>
  <%= javascript_include_tag "jquery.min" %>

  <script type="text/javascript">
  $(document).ready(function(){
    // Display request types
    $("#request").change(function(){
        $(this).find("option:selected").each(function(){
            var request = $(this).attr("value");
            $("#request_hw_new").hide()
            $("#request_hw_renew_tech").hide()
            $("#request_hw_lost").hide()
            if(request == 'new'){
              $("#request_hw_new").show()
            }
            else if(request == 'renew' || request == 'technical service'){
              $("#request_hw_renew_tech").show()
            }
            else if(request == 'stolen/lost'){
              $("#request_hw_lost").show()
            }
        });
    }).change();
  });
  </script>

</head>
<body>

<div class="container-fluid">
  <hr>
  <h2><strong> Identificación de Usuario y Solicitud </strong></h2>
  <hr>
  <br>
  <br>

  <%= form_with url: "validate", method: "get" do |form| %>
  <div class="row">
     <div class="col-lg-3 col-md-3 col-sm-3 col-xs-1"></div>
     <div class="well form-horizontal col-lg-6 col-md-6 col-sm-6 col-xs-10">

       <div id= "request" class="row">
         <div class="hidden-lg hidden-md col-sm-1 col-xs-1"></div>
         <p class="col-lg-6 col-md-6 col-sm-5 col-xs-5 text-left">
           <%= form.label :request_type, 'Seleccione Solicitud' %>
         </p>
         <p class="col-lg-6 col-md-6 col-sm-5 col-xs-5 pull-left">
           <%= form.select :request_type, [['Cesión de línea', 'transfer line'],
           ['Nuevo Equipo/Servicio', 'new'], ['Renovar Equipo', 'renew'],
           ['Robo/Pérdida Equipo', 'stolen/lost'],
           ['Reparar Equipo', 'technical service']], {},  {style: "width:100%"}  %>
         </p>
         <div class="hidden-lg hidden-md col-sm-1 col-xs-1"></div>
       </div>

       <div id= "request_hw_new" class="row">
         <div class="hidden-lg hidden-md col-sm-1 col-xs-1"></div>
         <p class="col-lg-6 col-md-6 col-sm-5 col-xs-5 text-left">
           <%= form.label :request_hw_new, 'Seleccione Equipo/Servicio' %>
         </p>
         <p class="col-lg-6 col-md-6 col-sm-5 col-xs-5 pull-left">
           <%= form.select :request_hw_new, [['Smartphone', 'smartphone'],
           ['Sim', 'sim'], ['Bam', 'bam'], ['Roaming', 'roaming']], {},
           {style: "width:100%"} %>
         </p>
         <div class="hidden-lg hidden-md col-sm-1 col-xs-1"></div>
       </div>

       <div id= "request_hw_renew_tech" class="row">
         <div class="hidden-lg hidden-md col-sm-1 col-xs-1"></div>
         <p class="col-lg-6 col-md-6 col-sm-5 col-xs-5 text-left">
           <%= form.label :request_hw_renew_tech, 'Seleccione Equipo/Servicio' %>
         </p>
         <p class="col-lg-6 col-md-6 col-sm-5 col-xs-5 pull-left">
           <%= form.select :request_hw_renew_tech, [['Smartphone', 'smartphone'],
           ['Bam', 'bam']], {}, { style: "width:100%"}  %>
         </p>
         <div class="hidden-lg hidden-md col-sm-1 col-xs-1"></div>
       </div>

       <div id= "request_hw_lost" class="row">
         <div class="hidden-lg hidden-md col-sm-1 col-xs-1"></div>
         <p class="col-lg-6 col-md-6 col-sm-5 col-xs-5 text-left">
            <%= form.label :request_hw_lost, 'Seleccione Equipo/Servicio' %>
         </p>
         <p class="col-lg-6 col-md-6 col-sm-5 col-xs-5 pull-left">
            <%= form.select :request_hw_lost, [['Smartphone', 'smartphone'], ['Sim', 'sim'],
            ['Bam', 'bam']], {}, {style: "width:100%"}  %>
         </p>
         <div class="hidden-lg hidden-md col-sm-1 col-xs-1"></div>
       </div>

       <div id= "request_hw_lost" class="row">
         <div class="hidden-lg hidden-md col-sm-1 col-xs-1"></div>
         <p class="col-lg-6 col-md-6 col-sm-5 col-xs-5 text-left">
            <%= form.label :user_rut, 'Identificación Usuario' %>
         </p>
         <p class="col-lg-6 col-md-6 col-sm-5 col-xs-5 pull-left">
            <%= form.text_field :user_rut, id: :request_request, placeholder: "ej: 17395384-2",
            style: "width:100%" %>
         </p>
         <div class="hidden-lg hidden-md col-sm-1 col-xs-1"></div>
       </div>

       <% if alert %>
       <div class="alert alert-danger">
         <strong><%= alert %></strong></p>
       </div>
       <% end %>

    </div>
  <div class="col-lg-2 col-md-3 col-sm-3 col-xs-1"></div>
  </div>

    <%= form.submit 'Enviar', class: "btn btn-success btn-lg" %>
</div>
  <% end %>

</body>
</html>
