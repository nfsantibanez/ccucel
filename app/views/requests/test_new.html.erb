<!DOCTYPE html>
<html lang="en">
<head>
  <title>Identifiación de Usuario y Solicitud</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <style>
  </style>
  <%= javascript_include_tag "display_menus.min" %>

  <script type="text/javascript">
  $(document).ready(function(){

    $(".select_1").change(function(){
        $(this).find("option:selected").each(function(){
            var request = $(this).attr("value");
            var w_sim = $('input:checked[name="want_sim"]').val();
            var w_number = $('input:checked[name="want_number"]').val();
            if(request == 'smartphone'){
                $("#models").show();
                $("#bam_models").hide();
                $("#want_sim").show();
                if(w_sim == 'true'){
                  $("#want_number").show();
                  if(w_number == 'false'){
                      $("#number").show();
                  }
                  else{
                      $("#number").hide();
                  }
                }
                else{
                  $("#want_number").hide();
                  $("#number").hide();
                }
            }
            else if(request == 'sim'){
              $("#models").hide();
              $("#bam_models").hide();
              $("#want_sim").hide();
              $("#want_number").show();
              if(w_number == 'false'){
                  $("#number").show();
              }
              else{
                  $("#number").hide();
              }
            }

            else{
                $("#models").hide();
                $("#want_sim").hide();
                $("#want_number").hide();
                $("#number").hide();
                $("#bam_models").show();
            }
        });
    }).change();

    var display_menus = function(){
      var request = $(".select_1 option:selected").attr("value");
      var w_sim = $('input:checked[name="want_sim"]').val();
      var w_number = $('input:checked[name="want_number"]').val();
      if(w_sim == 'true') {
          $("#want_number").show();
          if(w_number == 'false'){
              $("#number").show();
          }
          else{
              $("#number").hide();
          }
      }
      else if(w_sim == 'false'){
        if (request != 'sim'){
          $("#want_number").hide();
          $("#number").hide();
        }
        else{
          if(w_number == 'false'){
              $("#number").show();
          }
          else{
              $("#number").hide();
          }
        }
      }
    };

    $('input[name="want_sim"]').change(display_menus);
    $('input[name="want_number"]').change(display_menus);
    //$(".select_1").change(display_menus);

  });
  </script>

</head>
<body>

<div class="container-fluid">
  <h1><strong> Formulario </strong></h1>
  <hr>
  <h3> Formulario Nuevo </h3>
  <hr>

  <%= form_with url: "/requests/forms/create/new", method: "post" do |form| %>

    <!-- Obtener nueva informacion del Formulario -->
    <h4><strong> Datos de Solicitud</strong></h4>
    <hr>

    <div class="field-center">
    <%= form.label :request, 'Seleccione Requerimiento' %>
    <%= form.select :request, [['Smartphone', 'smartphone'], ['Sim', 'sim'], ['BAM', 'bam']], {},
    { :class => 'select_1' } %>
    </div>
    <br>

    <div id= "models" class="field-center">
    <%= form.label :model, 'Seleccione Modelo Smartphone' %>
    <%= form.select :model, [['Galaxy J7', 1], ['Galaxy S5', 2], ['Iphone 6s', 3], ['Iphone X', 4]], {} %>
    </div>

    <div id= "bam_models" class="field-center">
    <%= form.label :bam_model, 'Seleccione Modelo BAM' %>
    <%= form.select :bam_model, [['Huaewi E5573', 1], [ 'Huaewi E8372', 2]], {} %>
    </div>

    <br>

    <div id= "want_sim" class="field-center">
    <%= form.label :want_sim, 'Desea Incluir Tarjeta Sim?' %>
    <%= form.collection_radio_buttons :want_sim, [[true, 'Si'], [false, 'No']], :first, :last,
    :item_wrapper_class => 'inline', checked: true%>
    </div>

    <div id= "want_number" class="field-center">
    <%= form.label :want_number, 'Desea un número nuevo?'%>
    <%= form.collection_radio_buttons :want_number, [[true, 'Si'], [false, 'No, quiero portar un numero']], :first, :last,
    :item_wrapper_class => 'inline', checked: true%>
    </div>

    <div id= "number" class="field-center">
    <%= form.label :number, 'Ingrese Número: +56 9' %>
    <%= form.text_field :number %>
    </div>

    </div>
    <br>
    <!-- Enviar Formulario -->
    <%= form.submit 'Enviar', class: "btn btn-success btn-lg" %>
  <% end %>

</div>

</body>
</html>
