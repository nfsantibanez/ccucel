<p id="notice"><%= notice %></p>

<h1>Requests</h1>

<table>
  <thead>
    <tr>
      <th>Request</th>
      <th>Item</th>
      <th>Model</th>
      <th>Plan</th>
      <th>Contract</th>
      <th>File</th>
      <th>Status</th>
      <th>Comment</th>
      <th>Closed at</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.request %></td>
        <td><%= request.item %></td>
        <td><%= request.model %></td>
        <td><%= request.plan %></td>
        <td><%= request.contract %></td>
        <td><%= request.file %></td>
        <td><%= request.status %></td>
        <td><%= request.comment %></td>
        <td><%= request.closed_at %></td>
        <td><%= request.user %></td>
        <td><%= link_to 'Show', request %></td>
        <td><%= link_to 'Edit', edit_request_path(request) %></td>
        <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

